# NDRX_HOME should already be set during build

APPDIR=`pwd`
NDRXCONFIG=$APPDIR/NDRXCONFIG
QMCONFIG=$APPDIR/QFS
WSNADDR=//localhost:7766
PATH=$NDRX_HOME/bin:$PATH
LD_LIBRARY_PATH=$NDRX_HOME/lib:$LD_LIBRARY_PATH

export NDRX_HOME APPDIR NDRXCONFIG QMCONFIG WSNADDR
FIELDTBLS32=tpadm,Usysfl32,dmadmin,evt_mib,mydef
FLDTBLDIR32=$NDRX_HOME/udataobj:.
export FIELDTBLS32 FLDTBLDIR32

PATH=$NDRX_HOME/bin:$PATH
LD_LIBRARY_PATH=$NDRX_HOME/lib:$LD_LIBRARY_PATH
export PATH LD_LIBRARY_PATH

